# Permitir solo descarga de archivos ZIP y RAR
<Files "*.zip">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.rar">
    Order Allow,Deny
    Allow from all
</Files>

# Denegar acceso a todos los dem√°s archivos
<FilesMatch "^(?!.*\.(zip|rar)$).*$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Denegar listado de directorio
Options -Indexes